<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppBlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="FullScreenTheme" parent="AppBlueTheme">
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowActionBar">false</item>//无ActionBar
        <item name="android:windowFullscreen">true</item>//全屏即无通知栏
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@null</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
    </style>

    <style name="blueBtn">
        <item name="android:background">@drawable/duo_radius_blue_8</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="whiteBtn" parent="blueBtn">
        <item name="android:background">@drawable/duo_outline_blue_10</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="blackTxt">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="grayTxt" parent="blackTxt">
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="geryTxt">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer" />
        <attr name="stroke_width" format="dimension" />
        <attr name="color_tick" format="color" />
        <attr name="color_checked" format="color" />
        <attr name="color_unchecked" format="color" />
        <attr name="color_unchecked_stroke" format="color" />
    </declare-styleable>

    <style name="Theme_Corner_Dialog" parent="android:style/Theme.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@drawable/duo_radius_white_20</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@drawable/duo_radius_white_20</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme_Full_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">#00000000</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <declare-styleable name="CornerLabelView">
        <attr name="myBackgroundColor" format="color" />
        <attr name="tagModel" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="left_bottom" value="2" />
            <enum name="right_bottom" value="3" />
            <enum name="left_bar" value="4" />
            <enum name="right_bar" value="5" />
            <enum name="left_bottom_bar" value="6" />
            <enum name="right_bottom_bar" value="7" />
        </attr>
        <attr name="myTextSize" format="dimension" />
        <attr name="myTextColor" format="color" />
        <attr name="myText" format="string" />
        <attr name="myPaddingTop" format="dimension" />
        <attr name="mySlantedHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ViewfinderView">
        <attr name="inner_width" format="dimension" />
        <attr name="inner_height" format="dimension" />
        <attr name="inner_margintop" format="dimension" />
        <attr name="inner_corner_color" format="color" />
        <attr name="inner_corner_length" format="dimension" />
        <attr name="inner_corner_width" format="dimension" />
        <attr name="inner_scan_bitmap" format="reference" />
        <attr name="inner_scan_speed" format="integer" />
        <attr name="inner_scan_iscircle" format="boolean" />
    </declare-styleable>

    <dimen name="dp_4">4dp</dimen>
    <dimen name="dp_10">10dp</dimen>
    <dimen name="dp_18">18dp</dimen>
    <dimen name="dp_20">20dp</dimen>
    <dimen name="dp_36">36dp</dimen>
    <dimen name="dp_40">40dp</dimen>
    <dimen name="dp_48">48dp</dimen>
    <dimen name="sp_16">16sp</dimen>
    <dimen name="sp_14">14sp</dimen>
    <dimen name="sp_12">12sp</dimen>

    <item name="auto_focus" type="id" />
    <item name="decode" type="id" />
    <item name="decode_failed" type="id" />
    <item name="decode_succeeded" type="id" />
    <item name="encode_failed" type="id" />
    <item name="encode_succeeded" type="id" />
    <item name="launch_product_query" type="id" />
    <item name="quit" type="id" />
    <item name="restart_preview" type="id" />
    <item name="return_scan_result" type="id" />
    <item name="search_book_contents_failed" type="id" />
    <item name="search_book_contents_succeeded" type="id" />
</resources>
