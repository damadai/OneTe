<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 倒三角 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%">
            <shape android:shape="rectangle">
                <size
                    android:width="18dp"
                    android:height="18dp" />
                <solid android:color="@color/duo_media_gray" />
            </shape>
        </rotate>
    </item>
</layer-list>