<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivPhoto_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:minWidth="90dp"
        android:background="@color/gray3"
        android:minHeight="90dp"
        android:scaleType="centerCrop" />

    <com.cloud.duolib.view.SmoothCheckBox
        android:id="@+id/scBox_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        app:color_checked="@color/blue"
        app:color_tick="@color/white"
        app:color_unchecked="@color/gray2"
        app:color_unchecked_stroke="@color/white" />
</FrameLayout>