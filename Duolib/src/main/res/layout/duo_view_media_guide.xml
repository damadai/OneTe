<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/duo_black_75">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/bg_guide_186" />

    <TextView
        android:id="@+id/tvPass_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="24dp"
        android:text="@string/skip"
        android:textColor="@color/duo_media_white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tvOk_guide"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_48"
        android:background="@drawable/duo_outline_black_24"
        android:gravity="center"
        android:paddingHorizontal="56dp"
        android:text="@string/know"
        android:textColor="@color/duo_media_white"
        android:textSize="@dimen/sp_16" />

</FrameLayout>